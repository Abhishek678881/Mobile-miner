<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/corner_radius_lighter">

    <LinearLayout
        android:id="@+id/llIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_launcher_round" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/llIcon"
        android:gravity="start"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_main"
        android:textStyle="bold"
        android:text="Scala Pool" />

    <TextView
        android:id="@+id/tvMiners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_secondary"
        android:text="# miners" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/llNode"
        android:gravity="end"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_inactive"
        android:visibility="gone"
        android:text="(Recommended)" />

    <TextView
        android:id="@+id/tvHr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# H/s"
        android:textColor="@color/txt_secondary"
        android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/statCheckOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:gravity="start"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Your Stats"
                android:gravity="start"
                android:textColor="@color/c_grey"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fetchdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c_white"
                android:padding="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Network Stats"
                android:gravity="start"
                android:textColor="@color/c_grey"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fetchdataNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c_white"
                android:padding="5dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
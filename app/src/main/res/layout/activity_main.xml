<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="scala.androidminer.MainActivity"> <!--  tools:openDrawer="start" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_black"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_lighter"
            android:elevation="4dp"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitStart"
                        android:src="@mipmap/ic_logo_colors" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="Miner"
                        android:textColor="@color/c_white"
                        android:textSize="18dp" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/miningTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mining to:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=""
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/hpers" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:text="0" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/outputScrollView"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible" />

        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <android.support.design.button.MaterialButton
                android:id="@+id/start"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/c_blue"
                android:backgroundTintMode="src_over"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/start"
                android:textSize="15dp"
                android:textAllCaps="false"
                app:cornerRadius="5dp"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBaseline_toBaselineOf="parent">

                <android.support.design.button.MaterialButton
                    android:id="@+id/minerBtn1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:insetLeft="2dp"
                    android:insetRight="2dp"
                    android:backgroundTint="@color/bg_lighter"
                    android:backgroundTintMode="src_over"
                    android:textSize="15dp"
                    android:text="H"
                    app:cornerRadius="5dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/minerBtn2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:insetLeft="2dp"
                    android:insetRight="2dp"
                    android:backgroundTint="@color/bg_lighter"
                    android:backgroundTintMode="src_over"
                    android:textSize="15dp"
                    android:text="P"
                    app:cornerRadius="5dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/minerBtn3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:insetLeft="2dp"
                    android:insetRight="2dp"
                    android:backgroundTint="@color/bg_lighter"
                    android:backgroundTintMode="src_over"
                    android:textSize="15dp"
                    android:text="R"
                    app:cornerRadius="5dp" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#CC000000"
        android:textColor="#ffffff"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#FFF"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/drawermenu" />

</android.support.v4.widget.DrawerLayout>

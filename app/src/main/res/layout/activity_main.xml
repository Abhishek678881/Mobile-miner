<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutNightMode"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgDayMode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:src="@drawable/ic_daymode" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/speedNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="230"
                android:textSize="68sp"
                android:textStyle="bold"
                android:textColor="@color/c_green" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hashrateNM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:gravity="start"
            android:text="H/s"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textColor="@color/c_lighter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="CPU:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cputempNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="n/a"
                android:textSize="14sp"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/c_lighter"
                android:text="@string/celsius"
                android:textSize="14sp"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="Battery:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/batterytempNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="n/a"
                android:textSize="14sp"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/c_lighter"
                android:text="@string/celsius"
                android:textSize="14sp"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acceptedshareNM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:text="@string/newacceptedshare"
            android:alpha="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/c_green" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDayMode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="@color/bg_grey"
        android:keepScreenOn="false"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_above="@id/main_navigation">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layoutpayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/payoutgoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="start"
                    android:text="@string/payoutgoal"
                    android:textSize="12sp"
                    android:textColor="@color/c_lighter" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:gravity="start"
                    android:text="@string/na"
                    android:textSize="12sp"
                    android:textColor="@color/c_lighter" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/xlaunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="start"
                    android:text="XLA"
                    android:textSize="12sp"
                    android:textColor="@color/c_lighter"  />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:gravity="start"
                    android:text="n/a"
                    android:textSize="12sp"
                    android:textColor="@color/c_yellow"  />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/percentageunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="%"
                    android:textSize="12sp"
                    android:textColor="@color/c_yellow"  />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/payoutmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Message"
                    android:textSize="12sp"
                    android:textColor="@color/c_grey"  />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progresspayout"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_rounded">
            </ProgressBar>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_radius_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/workername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="Worker Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_white"  />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="Shares"
                android:textSize="14sp"
                android:textColor="@color/c_lighter"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <LinearLayout
                android:id="@+id/layoutstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/statusicon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_cooling_grey" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/c_lighter"
                    android:text="Status"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layouthashrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="0"
                    android:textColor="@color/c_grey"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/hs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/c_white"
                    android:textSize="14dp"
                    android:text="@string/hpers" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@color/c_grey" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:background="@color/c_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="CPU:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cputemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="n/a"
                android:textSize="14sp"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/c_lighter"
                android:text="@string/celsius"
                android:textSize="14sp"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="Battery:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/batterytemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="n/a"
                android:textSize="14sp"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/c_lighter"
                android:text="@string/celsius"
                android:textSize="14sp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="Cores:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/c_lighter" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/nbcores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="n/a"
                android:textSize="14sp"
                android:textColor="@color/c_lighter" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/corner_radius_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5pt"
                android:paddingStart="15dp"
                android:text="@string/mininglog"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/c_grey" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/showCores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5pt"
                android:paddingEnd="15dp"
                android:text="@string/forcehashrate"
                android:textSize="12sp"
                android:selectAllOnFocus="false"
                android:linksClickable="true"
                android:autoLink="all"
                android:onClick="onShowCores"
                android:textColor="@color/c_blue" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5pt"
            android:paddingBottom="5pt"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:scrollbars = "vertical"
            android:textSize="12sp"
            android:textColor="@color/c_grey" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <android.support.design.button.MaterialButton
                android:id="@+id/btnNightMode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/bg_black"
                android:enabled="false"
                android:gravity="bottom"
                app:iconGravity="textStart"
                app:cornerRadius="5dp"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/c_grey"
                app:icon="@drawable/ic_nightmode" />

            <android.support.design.button.MaterialButton
                android:id="@+id/minerBtnPR"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/bg_black"
                android:enabled="false"
                android:gravity="bottom"
                app:iconGravity="textStart"
                app:cornerRadius="5dp"
                app:iconPadding="0dp"
                app:iconTint="@color/c_grey"
                app:icon="@drawable/ic_pause" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <android.support.design.button.MaterialButton
                android:id="@+id/start"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/bg_green"
                android:layout_gravity="bottom"
                android:text="@string/start"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/c_white"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_lighter"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/menu_selected_item"
        app:itemTextColor="@drawable/menu_selected_item"
        app:itemIconSize="28dp"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>

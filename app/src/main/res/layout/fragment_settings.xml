<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="fragment_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey"
    android:backgroundTint="@color/bg_grey"
    >

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="start"
        android:text="Settings"
        android:textColor="@color/c_white"
        android:textStyle="bold"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsTitle"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="55dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/cpuText"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:gravity="bottom"
                        android:text="CPU"
                        android:textColor="@color/c_grey"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:textColor="@color/c_grey"
                                    android:text="Cores" />

                                <TextView
                                    android:id="@+id/cpus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="" />

                            </LinearLayout>

                            <NumberPicker
                                android:theme="@style/DefaultNumberPickerTheme"
                                android:id="@+id/cores"
                                android:layout_width="75dp"
                                android:layout_height="75dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/c_grey"
                                android:text="Threads/Core" />

                            <NumberPicker
                                android:theme="@style/DefaultNumberPickerTheme"
                                android:id="@+id/threads"
                                android:layout_width="75dp"
                                android:layout_height="75dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/c_grey"
                                android:text="Intensity" />

                            <NumberPicker
                                android:theme="@style/DefaultNumberPickerTheme"
                                android:id="@+id/intensity"
                                android:layout_width="75dp"
                                android:layout_height="75dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/poolSpinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:spinnerMode="dropdown"
                            android:visibility="visible"
                            android:textColor="@color/c_lighter"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/c_lighter"
                            android:text="" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="15"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/pool"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/mining_pool_address"
                                    android:textColorHint="@color/c_black"
                                    android:inputType="textUri"
                                    android:textColor="@color/c_lighter"
                                    android:textSize="14dp"
                                    android:singleLine="true" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/port"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:textColor="@color/c_lighter"
                                    android:textSize="14dp"
                                    android:hint="@string/mining_pool_port"
                                    android:textColorHint="@color/c_black"
                                    android:inputType="number|phone"
                                    android:maxLength="6"
                                    android:singleLine="true" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight = "1"
                            android:hint="Your wallet address"
                            android:textColorHint="@color/c_black"
                            android:textColor="@color/c_lighter"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/buttonQrReader"
                            android:layout_width="27dp"
                            android:layout_height = "wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="2dp"
                            app:backgroundTint="#00000000"
                            app:icon="@drawable/ic_qr_scan" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Worker name or pool options"
                        android:textColorHint="@color/c_black"
                        android:text=""
                        android:textColor="@color/c_lighter"
                        android:textSize="14dp" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/chkPauseOnBattery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_lighter"
                        android:text="Pause mining on battery power" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.design.button.MaterialButton
            android:id="@+id/saveSettings"
            android:backgroundTint="@color/bg_blue"
            android:backgroundTintMode="src_over"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_alignParentRight="true"
            app:cornerRadius="5dp" />

    </RelativeLayout>

</RelativeLayout>
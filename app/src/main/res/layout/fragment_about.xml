<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/aboutTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:text="@string/app_name"
                    android:textColor="@color/c_white"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:text="@string/aboutapplication"
                    android:textColor="@color/c_white"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/release"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/buildString"
                    android:textColor="@color/c_lighter"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="System Info"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/c_white"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/systemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/c_grey"/>

                </ScrollView>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Credits"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/c_white"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Made with "
                        android:textColor="@color/c_lighter"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_heart" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=" by "
                        android:textColor="@color/c_lighter"
                        android:textSize="12sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/ScalaURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/c_blue"
                        android:textColorLink="@color/c_blue"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="."
                        android:textColor="@color/c_lighter"
                        android:textSize="12sp"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Forked from "
                    android:textColor="@color/c_lighter"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/Mine2getherURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/c_blue"
                    android:textColorLink="@color/c_blue"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text=" and "
                    android:textColor="@color/c_lighter"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/MoneroMinerURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/c_blue"
                    android:textColorLink="@color/c_blue"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="."
                    android:textColor="@color/c_lighter"
                    android:textSize="12sp"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Icons powered by "
                        android:textColor="@color/c_lighter"
                        android:textSize="12sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/FontAwesomeURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/c_blue"
                        android:textColorLink="@color/c_blue"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="."
                        android:textColor="@color/c_lighter"
                        android:textSize="12sp"/>

                </LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/followus"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/c_white"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnGitHub"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/bg_lighter"
                        android:insetLeft="2dp"
                        android:insetRight="2dp"
                        android:textSize="14dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="5dp"
                        app:iconPadding="0dp"
                        app:icon="@drawable/ic_github"/>

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnDiscord"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/bg_lighter"
                        android:insetLeft="2dp"
                        android:insetRight="2dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="5dp"
                        app:iconPadding="0dp"
                        app:icon="@drawable/ic_discord"/>

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnMedium"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/bg_lighter"
                        android:insetLeft="2dp"
                        android:insetRight="2dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="5dp"
                        app:iconPadding="0dp"
                        app:icon="@drawable/ic_medium"/>

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnTwitter"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/bg_lighter"
                        android:insetLeft="2dp"
                        android:insetRight="2dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="5dp"
                        app:iconPadding="0dp"
                        app:icon="@drawable/ic_twitter"/>

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnTelegram"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/bg_lighter"
                        android:insetLeft="2dp"
                        android:insetRight="2dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="5dp"
                        app:iconPadding="0dp"
                        app:icon="@drawable/ic_telegram"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
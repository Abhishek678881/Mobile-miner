<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="start"
            android:text="General"
            android:textColor="@color/c_white"
            android:textStyle="bold"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/buildString"
            android:textColor="@color/c_lighter"
            android:textSize="14sp"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:text="Website:"
                android:textColor="@color/c_grey"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/websiteURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:text="GitHub:"
                android:textColor="@color/c_grey"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/githubURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:text="Discord:"
                android:textColor="@color/c_grey"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/discordURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:text="Email:"
                android:textColor="@color/c_grey"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="System Info"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:textColor="@color/c_white"
            android:textStyle="bold"
            android:layout_marginTop="15sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/systemInfo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text=""
                android:textSize="14sp" />

        </ScrollView>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Credits"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:textColor="@color/c_white"
            android:textStyle="bold"
            android:layout_marginTop="0sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Made with "
                android:textColor="@color/c_lighter"
                android:textSize="14sp"
                android:layout_marginBottom="0sp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_heart" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=" by Scala."
                android:textColor="@color/c_lighter"
                android:textSize="14sp"
                android:layout_marginBottom="0sp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Forked from "
            android:textColor="@color/c_lighter"
            android:textSize="14sp"
            android:layout_marginBottom="0sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Mine2getherURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=""
            android:textColor="@color/c_blue"
            android:textColorLink="@color/c_blue"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=" and "
            android:textColor="@color/c_lighter"
            android:textSize="14sp"
            android:layout_marginBottom="0sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/MoneroMinerURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=""
            android:textColor="@color/c_blue"
            android:textColorLink="@color/c_blue"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="."
            android:textColor="@color/c_lighter"
            android:textSize="14sp"
            android:layout_marginBottom="0sp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Icons powered by "
                android:textColor="@color/c_lighter"
                android:textSize="14sp"
                android:layout_marginBottom="0sp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/FontAwesomeURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="@color/c_blue"
                android:textColorLink="@color/c_blue"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="."
                android:textColor="@color/c_lighter"
                android:textSize="14sp"
                android:layout_marginBottom="0sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>